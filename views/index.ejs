<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Homework: Database Management</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
</head>
<body>
    <div class="container my-5">
        <h1 class="text-center">Homework: API Check</h1>

        <!-- getSubscribedChannels -->
        <div class="card my-3">
            <div class="card-body">
                <h5 class="card-title">Get Subscribed Channels (ex:1)</h5>
                <input id="subscribedChannelsUserId" type="text" class="form-control" placeholder="Enter User ID">
                <button class="btn btn-primary mt-2" onclick="testAPI('/getSubscribedChannels/' + document.getElementById('subscribedChannelsUserId').value, 'subscribedChannelsResponse')">Test API</button>
                <pre id="subscribedChannelsResponse" class="bg-light p-3 mt-2"></pre>
            </div>
        </div>

        <!-- getChannelVideos -->
        <div class="card my-3">
            <div class="card-body">
                <h5 class="card-title">Get Channel Videos (ex:1)</h5>
                <input id="channelVideosId" type="text" class="form-control" placeholder="Enter Channel ID">
                <button class="btn btn-primary mt-2" onclick="testAPI('/getChannelVideos/' + document.getElementById('channelVideosId').value, 'channelVideosResponse')">Test API</button>
                <pre id="channelVideosResponse" class="bg-light p-3 mt-2"></pre>
            </div>
        </div>

        <!-- getCommentsOnVideo -->
        <div class="card my-3">
            <div class="card-body">
                <h5 class="card-title">Get Comments on Video (ex:1)</h5>
                <input id="videoCommentsId" type="text" class="form-control" placeholder="Enter Video ID">
                <button class="btn btn-primary mt-2" onclick="testAPI('/video/' + document.getElementById('videoCommentsId').value + '/comments', 'videoCommentsResponse')">Test API</button>
                <pre id="videoCommentsResponse" class="bg-light p-3 mt-2"></pre>
            </div>
        </div>

        <!-- getRepliesToComment -->
        <div class="card my-3">
            <div class="card-body">
                <h5 class="card-title">Get Replies to Comment (ex:1)</h5>
                <input id="commentRepliesId" type="text" class="form-control" placeholder="Enter Comment ID">
                <button class="btn btn-primary mt-2" onclick="testAPI('/comment/' + document.getElementById('commentRepliesId').value + '/replies', 'commentRepliesResponse')">Test API</button>
                <pre id="commentRepliesResponse" class="bg-light p-3 mt-2"></pre>
            </div>
        </div>

        <!-- checkUserLikedVideo -->
        <div class="card my-3">
            <div class="card-body">
                <h5 class="card-title">Check User Liked Video (ex:1,1)</h5>
                <input id="likedVideoUserId" type="text" class="form-control my-2" placeholder="Enter User ID">
                <input id="likedVideoId" type="text" class="form-control my-2" placeholder="Enter Video ID">
                <button class="btn btn-primary" onclick="testAPI('/check-like/' + document.getElementById('likedVideoUserId').value + '/' + document.getElementById('likedVideoId').value, 'likedVideoResponse')">Test API</button>
                <pre id="likedVideoResponse" class="bg-light p-3 mt-2"></pre>
            </div>
        </div>

        <!-- getWatchHistory -->
        <div class="card my-3">
            <div class="card-body">
                <h5 class="card-title">Get Watch History (ex:1)</h5>
                <input id="watchHistoryUserId" type="text" class="form-control" placeholder="Enter User ID">
                <button class="btn btn-primary mt-2" onclick="testAPI('/watch-history/' + document.getElementById('watchHistoryUserId').value, 'watchHistoryResponse')">Test API</button>
                <pre id="watchHistoryResponse" class="bg-light p-3 mt-2"></pre>
            </div>
        </div>

        <!-- getUserUploadedVideos -->
        <div class="card my-3">
            <div class="card-body">
                <h5 class="card-title">Get User Uploaded Videos (ex:1)</h5>
                <input id="uploadedVideosUserId" type="text" class="form-control" placeholder="Enter User ID">
                <button class="btn btn-primary mt-2" onclick="testAPI('/user-videos/' + document.getElementById('uploadedVideosUserId').value, 'uploadedVideosResponse')">Test API</button>
                <pre id="uploadedVideosResponse" class="bg-light p-3 mt-2"></pre>
            </div>
        </div>

        <!-- searchVideos -->
        <div class="card my-3">
            <div class="card-body">
                <h5 class="card-title">Search Videos (ex: 1)</h5>
                <input id="searchVideosKeyword" type="text" class="form-control" placeholder="Enter Keyword">
                <button class="btn btn-primary mt-2" onclick="testAPI('/search?keyword=' + document.getElementById('searchVideosKeyword').value, 'searchVideosResponse')">Test API</button>
                <pre id="searchVideosResponse" class="bg-light p-3 mt-2"></pre>
            </div>
        </div>

        <!-- checkSubscription -->
        <div class="card my-3">
            <div class="card-body">
                <h5 class="card-title">Check Subscription (ex:1)</h5>
                <input id="subscriptionUserId" type="text" class="form-control my-2" placeholder="Enter User ID">
                <input id="subscriptionChannelId" type="text" class="form-control my-2" placeholder="Enter Channel ID">
                <button class="btn btn-primary" onclick="testAPI('/check/' + document.getElementById('subscriptionUserId').value + '/' + document.getElementById('subscriptionChannelId').value, 'checkSubscriptionResponse')">Test API</button>
                <pre id="checkSubscriptionResponse" class="bg-light p-3 mt-2"></pre>
            </div>
        </div>

        <!-- searchChannels -->
        <div class="card my-3">
            <div class="card-body">
                <h5 class="card-title">Search Channels (ex: test)</h5>
                <input id="searchChannelsKeyword" type="text" class="form-control" placeholder="Enter Keyword">
                <button class="btn btn-primary mt-2" onclick="testAPI('/searchChannel?channel=' + document.getElementById('searchChannelsKeyword').value, 'searchChannelsResponse')">Test API</button>
                <pre id="searchChannelsResponse" class="bg-light p-3 mt-2"></pre>
            </div>
        </div>
    </div>

    <script>
        async function testAPI(endpoint, responseElementId) {
            try {
                const response = await fetch(endpoint);
                const data = await response.json();
                document.getElementById(responseElementId).textContent = JSON.stringify(data, null, 2);
            } catch (error) {
                document.getElementById(responseElementId).textContent = 'Error: ' + error.message;
            }
        }
    </script>
</body>
</html>
